extends ../layouts/common.pug
block content
    h1 CartsProducts
    h1 Tổng số sản phẩm: #{qty}
    h1 Tổng số tiền: #{totalPrice} đồng
    .row(style='margin:20px')
        each product in products
            .col-4
                .card(style='width: 100%')
                    img.card-img-top(src=product.image)
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.descripttion
                        a.btn.btn-primary(href='/cart/remove/' + product.id) Remove
    a.btn.btn-primary(href='#') Tiến hành đặt hàng
    